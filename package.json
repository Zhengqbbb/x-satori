{
  "name": "x-satori",
  "type": "module",
  "version": "0.0.1",
  "description": "cli stater",
  "author": "Q.Ben Zheng <zhengqbbb@gmail.com> (https://github.com/Zhengqbbb/)",
  "license": "MIT",
  "homepage": "https://github.com/Zhengqbbb/x-satori#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zhengqbbb/x-satori"
  },
  "bugs": "https://github.com/Zhengqbbb/x-satori/issues",
  "keywords": [
    "cli"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "x-satori": "dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "unbuild --stub && vitest",
    "build": "unbuild",
    "start": "x-satori",
    "cz": "czg",
    "lint": "eslint .",
    "test": "vitest run",
    "postinstall": "simple-git-hooks",
    "prepack": "npm run build",
    "release": "run-s release:bump release:publish",
    "release:bump": "bumpp -y -c 'build: :bookmark: publish v%s'",
    "release:publish": "pnpm publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.3",
    "@types/node": "^18.15.3",
    "bumpp": "^9.0.0",
    "cz-git": "^1.6.0",
    "czg": "^1.6.0",
    "eslint": "^8.36.0",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.0",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "pathe": "^1.1.0",
    "pnpm": "^7.29.1",
    "rimraf": "^4.4.0",
    "simple-git-hooks": "^2.8.1",
    "tsx": "^3.12.5",
    "typescript": "^4.9.5",
    "unbuild": "^1.1.2",
    "vitest": "^0.29.2",
    "x-satori": "workspace:*"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm lint"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}
